<Project Sdk="Microsoft.NET.Sdk">

  <!--
    This project inherits common settings from Directory.Build.props
    Package versions are managed centrally in Directory.Packages.props
  -->

  <PropertyGroup>
    <!-- Enable packaging for this project -->
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    
    <!-- Package-specific metadata -->
    <PackageId>DevDad.Hangfire.Oracle</PackageId>
    <Title>Hangfire Oracle Storage Provider</Title>
    <Description>Hangfire storage provider implementation for Oracle Database using Oracle.ManagedDataAccess.Core and Dapper. Provides reliable job persistence with background processes for maintenance.</Description>
    <PackageTags>hangfire;oracle;storage;background-jobs;job-scheduling;dapper;distributed-lock;devdad</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <!-- Production dependencies (versions from Directory.Packages.props) -->
  <ItemGroup>
    <PackageReference Include="Dapper" />
    <PackageReference Include="Dapper.Oracle" />
    <PackageReference Include="Hangfire.Core" />
    <PackageReference Include="Oracle.ManagedDataAccess.Core" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Scripts\Install.sql" />
    <EmbeddedResource Include="Scripts\Uninstall.sql" />
  </ItemGroup>

</Project>
